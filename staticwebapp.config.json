{
    "trailingSlash": "auto",
    "routes": [
      {
        "route": "/admin/*",
        "allowedRoles": ["administrator"]
      },
      {
        "route": "/about",
        "allowedRoles": ["*"]
      },
      {
        "route": "/contact",
        "allowedRoles": ["*"]
      },
      {
        "route": "/login",
        "allowedRoles": ["*"]
      },
      {
        "route": "/register",
        "allowedRoles": ["*"]
      },
      {
        "route": "/profile/*",
        "allowedRoles": ["authenticated"]
      },
      {
        "route": "/api/*",
        "allowedRoles": ["authenticated"]
      },
      {
        "route": "/*",
        "allowedRoles": []
      }
    ],
    "navigationFallback": {
      "rewrite": "/index.html",
      "exclude": ["/images/*", "/css/*", "/js/*"]
    },
    "responseOverrides": {
    "400": {
        "rewrite": "/bad-request.html"
    },
    "401": {
        "redirect": "/login",
        "statusCode": 302
    },
    "403": {
        "rewrite": "/custom-forbidden-page.html"
    },
    "404": {
        "rewrite": "/404.html"
    }
    },
    "globalHeaders": {
      "Content-Security-Policy": "script-src 'self' https://cdnjs.cloudflare.com https://code.jquery.com; style-src 'self' https://cdnjs.cloudflare.com https://fonts.googleapis.com https://fonts.gstatic.com; object-src 'none'",
      "X-Content-Type-Options": "nosniff"
    },
    "mimeTypes": {
      ".html": "text/html",
      ".css": "text/css",
      ".js": "application/javascript",
      ".json": "application/json",
      ".png": "image/png",
      ".jpg": "image/jpeg",
      ".jpeg": "image/jpeg",
      ".gif": "image/gif",
      ".svg": "image/svg+xml",
      ".woff": "font/woff",
      ".woff2": "font/woff2",
      ".ttf": "font/ttf",
      ".otf": "font/otf",
      ".webp": "image/webp" 
    }
  }
  